@page "/employees"

@if (loading)
{
    <Loading />
}
else
{
    <MudTable Items="@Employees"
              @ref="table"
              ServerData="LoadListAsync"
              Dense="true"
              Hover="true"
              Striped="true"
              FixedHeader="true"
              FixedFooter="true">

        <ToolBarContent>
            <div class="d-flex justify-content-between">
                <MudText Typo="Typo.h6" Class="me-4">Employees</MudText>

                <MudButton Variant="Variant.Outlined"
                           EndIcon="@Icons.Material.Filled.Add"
                           Color="Color.Info" OnClick="@(() => ShowModalAsync())">
                    New Employee
                </MudButton>

            </div>
            <MudSpacer />
            <FilterComponent ApplyFilter="SetFilterValue" />
        </ToolBarContent>

        <HeaderContent>
            <MudTh>Name</MudTh>
            <MudTh>Status</MudTh>
            <MudTh>Hire date</MudTh>
            <MudTh>Salary</MudTh>
            <MudTh style="width: 270px;">Actions</MudTh>
        </HeaderContent>

        <RowTemplate>
            <MudTd>@context.Name @context.LastName</MudTd>
            <MudTd>@GetStatus(context.IsActive)</MudTd>
            <MudTd>@context.HireDate.ToString("dd/MM/yyyy")</MudTd>
            <MudTd>@context.Salary.ToString("C")</MudTd>            
            
            <MudTd>
                <MudTooltip Text="Edit">
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Warning"
                               OnClick="@(() => ShowModalAsync(context.Id, true))">
                        <MudIcon Icon="@Icons.Material.Filled.Edit" />
                    </MudButton>
                </MudTooltip>

                <MudTooltip Text="Delete">
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Error"
                               OnClick="@(() => DeleteAsync(@context))">
                        <MudIcon Icon="@Icons.Material.Filled.Delete" />
                    </MudButton>
                </MudTooltip>
            </MudTd>
        </RowTemplate>

        <NoRecordsContent>
            <MudText>"No logs found"</MudText>
        </NoRecordsContent>
        <PagerContent>
            <MudTablePager RowsPerPageString="Number of logs"
                           PageSizeOptions="pageSizeOptions"
                           AllItemsText="All"
                           InfoFormat="@infoFormat" />
        </PagerContent>
    </MudTable>
}
