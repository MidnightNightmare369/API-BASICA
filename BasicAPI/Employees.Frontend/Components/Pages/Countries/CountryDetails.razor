@page "/countries/details/{CountryId:int}"

@if (loading)
{
    <Loading />
}
else
{
    <MudTable Items="@states"
              @ref="table"
              ServerData="LoadListAsync"
              Dense="true"
              Hover="true"
              Striped="true"
              FixedHeader="true"
              FixedFooter="true">
        <ToolBarContent>
            <MudText Typo="Typo.h6" Class="mr-4"><i class="bi bi-globe-americas"></i> @country?.Name</MudText>
            <MudButton Variant="Variant.Outlined" Class="mr-4" StartIcon="@Icons.Material.Filled.ArrowBack" Color="Color.Tertiary" OnClick="ReturnAction">Back</MudButton>
            <MudButton Variant="Variant.Outlined" Class="mr-4" EndIcon="@Icons.Material.Filled.Add" Color="Color.Info" OnClick="@(() => ShowModalAsync())">Create</MudButton>
            <MudSpacer />
            <FilterComponent ApplyFilter="SetFilterValue" />
        </ToolBarContent>
        <HeaderContent>
            <MudTh>State</MudTh>
            <MudTh style="width: 100px;">Cities</MudTh>
            <MudTh style="width: 270px;">Actions</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="State">@context.Name</MudTd>
            <MudTd DataLabel="Cities">
                <MudTooltip Text="Cities">
                    <MudButton Variant="Variant.Filled" 
                            EndIcon="@Icons.Material.Filled.Map" 
                            Color="Color.Info" 
                            OnClick="@(() => CitiesAction(@context))" 
                            style="width: 100px;">
                        @context.CitiesNumber
                    </MudButton>
                </MudTooltip>
            </MudTd>
            <MudTd DataLabel="Actions">
                <MudTooltip Text="Edit">
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Warning"
                               OnClick="@(() => ShowModalAsync(context.Id, true))">
                        <MudIcon Icon="@Icons.Material.Filled.Edit" />
                    </MudButton>
                </MudTooltip>
                <MudTooltip Text="Delete">
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Error"
                               OnClick="@(() => DeleteAsync(@context))">
                        <MudIcon Icon="@Icons.Material.Filled.Delete" />
                    </MudButton>
                </MudTooltip>
            </MudTd>
        </RowTemplate>
        <NoRecordsContent>
            <MudText>No records found.</MudText>
        </NoRecordsContent>
        <PagerContent>
            <MudTablePager RowsPerPageString="Number of records"
                           PageSizeOptions="pageSizeOptions"
                           AllItemsText="All"
                           InfoFormat="@infoFormat" />
        </PagerContent>
    </MudTable>
}
