<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h5">Are you sure you want to sign out?</MudText>
        <MudText Typo="Typo.body2">If you sign out, you will need to sign in again to access your account.</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Outlined" Color="Color.Tertiary" OnClick="CancelAction">Cancel</MudButton>
        <MudSpacer />
        <MudButton Variant="Variant.Outlined" Color="Color.Error" OnClick="LogoutActionAsync">Sign Out</MudButton>
    </DialogActions>
</MudDialog>